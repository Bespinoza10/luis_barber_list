<div class="container">
  <div class="row">
    <div class="col-md-10 list center-block">
      <br>
      <div class="col-md-6 center-block names panel-default panel">
        <h1><%= @list.name %></h1>
        <p><strong>Barber:</strong> <%= @list.barber.name %></p>
        <hr>
      </div>
      <div class="col-md-2 center-block">
        <%= link_to "edit", edit_list_path(@list), class: "btn btn-default btn-edit"%>
        <%= link_to "Delete", list_path(@list), method: :delete, data: {confirm: "Are you sure you want to delete this client?"}, class: "btn btn-default btn-delete"%>
      </div>
    </div>
  </div>
</div>
