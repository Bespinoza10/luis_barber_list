<div class="container">
  <div class="row">
    <div class="col-md-2 list center-block">
      <%= link_to "Add Me to the List", new_list_path, class: "btn-add btn"%>
    </div>
    <br>
    <div id="lists" class="transitions-enabled col-md-10 list center-block">
      <% @barber.each do |barber| %>
        <div class="col-md-6 names panel-default panel" style="float:left;">
          <h1><%= barber.name %></h1>
          <% for list in barber.lists %>
              <h4><%= link_to list.name, list %></h4>
          <% end %>
          <hr>
        </div>
      <%end%>
    </div>
  </div>
</div>
